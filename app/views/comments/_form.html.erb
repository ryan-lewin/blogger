<h3>Post Comment</h3>

  <%= form_for [ @article, @comment ] do |f| %>
    <div class="form-group">
      <%= f.label :author_name, "Your Name" %>
      <%= f.text_field :author_name, :class => "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, :class => "form-control" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" <%= f.submit%>Submit</button>
    </div>
  <% end %>
